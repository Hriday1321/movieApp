<%- include('./partials/header.ejs') %>
    <title>
        Find by Title Page
    </title>
    <link rel="stylesheet" href="/home.css">
</head>
<body>
<div id="container">
    <div id="nav">
        <div class="left">
            <form action="/title" method="GET">
                <input type="text" name="title" placeholder="Enter Title term">
                <span><button><i class="fas fa-search"></i></button><span>
            </form>
        </div>
        <div class="right">
            <form action="/search" method="GET">
                <input type="text" name='search' placeholder="Enter Search term">
                <span><button><i class="fas fa-search"></i></button><span>
            </form>
        </div>
    </div>
    <div class="f">
            <div class="lfl">
                <img src="<%= data["Poster"] %>">
            </div>
            <div class="rfl">
                <div class="title">
                    <%= data["Title"].toUpperCase() %>
                </div>
                <div class="content">
                    <p>
                        <strong>Year Released:</strong> <%= data["Year"] %>
                    </p>
                </div>
                <div class="content">
                    <p>
                        <strong>Genre:</strong> <%= data["Genre"] %>
                    </p>
                </div>
                <div class="content">
                    <p>
                        <strong>Actors:</strong> <%= data["Actors"] %>
                    </p>
                </div>
                <div class="content">
                    <p>
                        <strong>IMDB Rating:</strong> <%= data["imdbRating"] %>
                    </p>
                </div>
                <div class="content">
                    <p>
                        <strong>Plot:</strong> <%= data["Plot"] %>
                    </p>
                </div>
            </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
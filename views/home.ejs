<%- include('./partials/header.ejs') %>
    <title>
        Home Page
    </title>
    <link rel="stylesheet" href="/home.css">
</head>
<body>
<div id="container">
    <div id="nav">
        <div class="left">
            <form action="/title" method="GET">
                <input type="text" name="title" placeholder="Enter Title term">
                <span><button><i class="fas fa-search"></i></button><span>
            </form>
        </div>
        <div class="right">
            <form action="/search" method="GET">
                <input type="text" name='search' placeholder="Enter Search term">
                <span><button><i class="fas fa-search"></i></button><span>
            </form>
        </div>
    </div>
    <% data["Search"].forEach(function(data){ %>
        <div class="f">
                <div class="lfl">
                    <% if(data["Poster"] != "N/A"){ %>
                    <img src="<%= data["Poster"] %>" width="60%">
                    <% }else{ %>
                    <img src="https://www.freeiconspng.com/uploads/no-image-icon-6.png" width="60%" alt="Icon No Download">
                    <% } %>
                </div>
                <div class="rfl">
                    <div class="title">
                        <%= data["Title"].toUpperCase() %>
                    </div>
                    <div class="content">
                        <p>
                            <strong>Year Released:</strong> <%= data["Year"] %>
                        </p>
                    </div>
                    <div class="content">
                        <p>
                            <strong>Type:</strong> <%= data["Type"].toUpperCase() %>
                        </p>
                    </div>
                </div>
        </div>
    <% }) %>
</div>

<%- include('./partials/footer.ejs') %>